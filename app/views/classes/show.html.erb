<div class="span12">

  <div class="box_c1_mp extended">

    <div class="cover_photo" style= "background-image : url(<%#= @user.class_theme.present? ? @user.class_theme : '/assets/cover_photo.jpg'%>)">
      <% if @user.id == current_user.id %>
        <div class="cover_photo_button" style="float: right;margin-right: 18px;margin-top: 125px;"><a href="javascript:changeclassBGImage('<%= current_user.school_admin.school %>',0,<%= current_user.id %>)">switch theme</a></div>
      <% end %>
    </div>


    <div class="profile_box_right with_options">
      <% if current_user.role == 'teacher' %>
        <%= link_to 'Edit Class', edit_class_path(:school_name => current_user.school_admin.school,:id =>@user.id), :class => 'btn' %>
        <br/>
        <div class="roster_num"><%= link_to "Roster", roster_class_path(:school_name => current_user.school_admin.school,:id =>@user.id), :style => 'color: gray;' %></div>
      <% else %>
        <div class="btn-group other_profile_options_button">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <%= image_tag("/assets/dude.png", :width => '15px;', :height => '20px;') %>
            <span class="caret"></span>
          </a>
         
          
          
          
        </div>

        <div class="roster_num">Classmates</div>
      <% end %>
    </div>
    <%#= class_profile_picture %>
    <h2 class="profile_name"><%= @user.name.present? ? @user.name : "Class" %></h2>
    <br/>
    <p class="bio" style="width: 800px;"><%#= @user.description.present? ? @user.description : " " %></p>
    <div class="class_content_row">
      <%# if @user.syllabus_link.present? %>
        <%#= link_to "Syllabus", @user.syllabus_link.url, :class => "grey_text", :style => 'color: gray;' %> &#183;
      <%# else %>
        <%#= @user.syllabus.present? ? (link_to "Syllabus",@user.syllabus, :class => "grey_text", :style => 'color: gray;', :target => '_blank' )  : (link_to "Syllabus"," ", :class => "grey_text", :style => 'color: gray;') %>&#183;
      <%# end %>
      <%#= link_to_function "FAQ's", "faq('#{@user.user.school_admin.school}',#{@user.id})", :class => "grey_text", :style => 'color: gray;' %> &#183;
      <%#= link_to_function "Readings", "reading('#{@user.user.school_admin.school}',#{@user.id})", :class => "grey_text", :style => 'color: gray;' %> &#183;
      <%#= link_to_function "Important Links", "link('#{@user.user.school_admin.school}',#{@user.id})", :class => "grey_text", :style => 'color: gray;' %>
    </div>

  </div>


  <div class="row-fluid">

    <div class="span4">

      <div class="box_l1_hp side_nav_box">
        <%= link_to "<button class='side_nav_button class active_button' type=button'>Posts<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, class_path(:school_name => current_user.school_admin.school,:id =>@user.id) %>
        <%= link_to "<button class='side_nav_button announcements' type=button'>Announcements<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, announcements_notification_path(:school_name => current_user.school_admin.school,:id =>@user.id,:post => "announcement"), :remote => true %>
           <%= link_to "<button class='side_nav_button class active_button' type=button'>Reports<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, classes_path(:school_name => current_user.school_admin.school,:id =>@user.id) %>
        <%#= link_to "<button class='side_nav_button assignments' type=button'>Assignments<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, announcements_notification_path(:school_name => current_user.school_admin.school,:id =>@user.id,:post => "assignment"), :remote => true %>
        <%#= link_to "<button class='side_nav_button attendence' type=button'>Reports<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe,  join_class_path(:id =>@user.id) %>

      </div>                                                                                                                                                                                              

      <div class="box_l2_hp">
        <div class="instructor_header">Instructor</div>
        <%# if @user.user.role == 'student' %>
          <%#= @user.user.avatar.present? ? image_tag(@user.user.avatar.url(:original) , :width => '50px;', :height => '50px;', :class => "profile_pic img-rounded fifty_by_fifty") : image_tag("/assets/profile_pic_student.png",:width => '50px;',:height => '50px;' , :class => "profile_pic img-rounded fifty_by_fifty")%>
        <%# else %>
          <%#= @user.user.avatar.present? ? image_tag(@user.user.avatar.url(:original) , :width => '50px;', :height => '50px;', :class => "profile_pic img-rounded fifty_by_fifty") : image_tag("/assets/profile_pic_instructor.png",:width => '50px;',:height => '50px;' , :class => "profile_pic img-rounded fifty_by_fifty")%>
        <%# end %>
        <%#*<div class="instructor_name"><%= link_to @user.user.fullname, profile_path(:school_name => current_user.school_admin.school,:id =>@user.user.id) %></div>%>
        <%#*<p class="instructor_at_name">&nbsp<%= @user.user.username %></p>%>
      </div>

      <!---<div class="box_l2_hp">
        <div class="assistant_header">Assistant</div>
        <img class="profile_pic img-rounded" src="/assets/profile_placeholder.png" height="50px" width="50px"/>
        <div class="assistant_name"><a href="#">T/A Todd</a></div>
        <p class="assistant_at_name">&nbsp@TATodd</p>
      </div>-->

      <%#= render :partial => 'profiles/links' %>

    </div>

    <div class="span8" id="posts">
      <%#= render :partial => '/profiles/show' %>
      <%#= render :partial => 'new_classes_lic%>
    </div>
  </div>
  
  